# ===================================
# Clarin CRM - Environment Variables
# ===================================
# Copy this file to .env and fill in the values

# ===================
# Database (Required)
# ===================
POSTGRES_USER=clarin
POSTGRES_PASSWORD=your_secure_password_here_change_me
POSTGRES_DB=clarin

# For development (optional, built from above vars in production)
DATABASE_URL=postgres://clarin:clarin123@postgres:5432/clarin?sslmode=disable

# ===================
# Redis
# ===================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ===================
# Security (Required)
# ===================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-me-in-production

# ===================
# Admin User (Required for first run)
# ===================
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@clarin.local

# ===================
# Application
# ===================
ENV=development
PORT=8080
API_HOST=0.0.0.0
LOG_LEVEL=info

# ===================
# Frontend URLs
# ===================
# Development
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Production (uncomment for production)
# NEXT_PUBLIC_API_URL=https://clarin.naperu.cloud
# NEXT_PUBLIC_WS_URL=wss://clarin.naperu.cloud

# ===================
# CORS Origins
# ===================
CORS_ORIGINS=http://localhost:3000,https://clarin.naperu.cloud

# ===================
# WhatsApp Configuration
# ===================
WA_STORE_DIR=./wa_sessions
WA_MAX_CONNECTIONS=200

# ===================
# Media Storage
# ===================
MEDIA_DIR=./media
MAX_UPLOAD_SIZE=50MB

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m
